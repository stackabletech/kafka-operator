{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug stackable-kafka-operator",
            "cargo": {
                "args": [
                    "build"
                ],
                "filter": {
                    "name": "stackable-kafka-operator",
                    "kind": "bin"
                }
            },
            "program": "${workspaceFolder}/target/debug/stackable-kafka-operator",
            "args": [
                "run",
                "--kafka-broker-clusterrole",
                "kafka-operator",
                "--operator-namespace",
                "default",
                "--operator-service-name",
                "kafka-operator",
                "--kubernetes-node-name",
                "kind-control-plane"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}