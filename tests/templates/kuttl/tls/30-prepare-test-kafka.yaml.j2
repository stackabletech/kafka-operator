---
apiVersion: kuttl.dev/v1beta1
kind: TestStep
commands:
{% if test_scenario['values']['use-client-auth-tls'] == 'true' %}
  - script: kubectl cp -n $NAMESPACE ./test_client_auth_tls.sh test-kafka-broker-default-0:/tmp
  - script: kubectl cp -n $NAMESPACE ./wrong_keystore.p12 test-kafka-broker-default-0:/tmp
  - script: kubectl cp -n $NAMESPACE ./wrong_truststore.p12 test-kafka-broker-default-0:/tmp
{% elif test_scenario['values']['use-client-tls'] == 'true' %}
  - script: kubectl cp -n $NAMESPACE ./test_client_tls.sh test-kafka-broker-default-0:/tmp
{% endif %}
