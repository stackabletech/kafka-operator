---
apiVersion: kuttl.dev/v1beta1
kind: TestStep
metadata:
  name: install-kafka
timeout: 300
---
apiVersion: kafka.stackable.tech/v1alpha1
kind: KafkaCluster
metadata:
  name: simple-kafka
spec:
  version: {{ test_scenario['values']['kafka'] }}
  zookeeperConfigMapName: kafka-zk
  brokers:
    roleGroups:
      default:
        replicas: 1
      secondary:
        replicas: 1
